<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/video_poker_background">


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:columnCount="5"
        android:layout_margin="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/gridLayout">

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/comp_card_1"
            android:background="@drawable/eight_of_clubs"
            android:layout_row="0"
            android:layout_column="0" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/comp_card_2"
            android:background="@drawable/eight_of_clubs"
            android:layout_row="0"
            android:layout_column="1" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/comp_card_3"
            android:background="@drawable/eight_of_clubs"
            android:layout_row="0"
            android:layout_column="2" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/comp_card_4"
            android:background="@drawable/eight_of_clubs"
            android:layout_row="0"
            android:layout_column="3" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/comp_card_5"
            android:background="@drawable/eight_of_clubs"
            android:layout_row="0"
            android:layout_column="4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Held"
            android:id="@+id/held_1"
            android:textColor="#fff"
            android:layout_row="1"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Held"
            android:id="@+id/held_2"
            android:textColor="#fff"
            android:layout_row="1"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Held"
            android:id="@+id/held_3"
            android:textColor="#fff"
            android:layout_row="1"
            android:layout_column="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Held"
            android:id="@+id/held_4"
            android:textColor="#fff"
            android:layout_row="1"
            android:layout_column="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Held"
            android:id="@+id/held_5"
            android:textColor="#fff"
            android:layout_row="1"
            android:layout_column="4" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/card_1"
            android:background="@drawable/eight_of_clubs"
            android:layout_row="2"
            android:layout_column="0" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/card_2"
            android:background="@drawable/eight_of_clubs"
            android:layout_row="2"
            android:layout_column="1" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/card_3"
            android:background="@drawable/eight_of_clubs"
            android:layout_row="2"
            android:layout_column="2" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/card_4"
            android:background="@drawable/eight_of_clubs"
            android:layout_row="2"
            android:layout_column="3" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/card_5"
            android:background="@drawable/eight_of_clubs"
            android:layout_row="2"
            android:layout_column="4" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:id="@+id/menu"
            android:textSize="10dp"
            android:layout_row="3"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bet"
            android:textSize="10dp"
            android:id="@+id/bet"
            android:layout_row="3"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max Bet"
            android:id="@+id/maxBet"
            android:textSize="10dp"
            android:layout_row="3"
            android:layout_column="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deal"
            android:id="@+id/deal"
            android:textSize="10dp"
            android:layout_row="3"
            android:layout_column="3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credits:"
            android:id="@+id/credits"
            android:textSize="10dp"
            android:layout_row="3"
            android:layout_column="4" />

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PLEASE MAKE A BET"
        android:textColor="#fff"
        android:id="@+id/pokerHand"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>